<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/gameListTitle_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/GameListTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gameList_RecyclerView"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/gameList_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/gameListTitle_textView">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/create_button_gameList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/createButton_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>