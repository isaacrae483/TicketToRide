            android:textSize="35dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/white"/>

    </RelativeLayout>

    <ImageView
        android:paddingLeft="150dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/currentplayer_image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentplayer_name"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentplayer_traincards"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentplayer_destcards"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentplayer_carsleft"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentplayer_score"
            android:textSize="18sp"/>
    </LinearLayout>



</LinearLayout>