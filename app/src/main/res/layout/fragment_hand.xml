<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.game.HandFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/dest_hand"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/destination_card" />
        <TextView
            android:id="@+id/dest_hand_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="50sp"
            android:layout_alignLeft="@id/dest_hand"
            android:layout_alignTop="@id/dest_hand"
            android:layout_alignRight="@id/dest_hand"
            android:layout_alignBottom="@id/dest_hand"
            android:gravity="center"/>

    </RelativeLayout>

</FrameLayout>