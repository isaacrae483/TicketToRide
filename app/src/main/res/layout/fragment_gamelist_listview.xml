<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/gameListTitle_textView_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/GameListTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/gameList_listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/gameListTitle_textView_listView" />

    <Button
        android:id="@+id/create_button_gameList_listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/createButton_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>