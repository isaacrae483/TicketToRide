<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/map_RL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ttr_map_croped"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="40dp">

        <ImageView
            android:id="@+id/miami"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1095dp"
            android:layout_marginTop="570dp"
            android:contentDescription="@string/route"
            android:rotation="-39"
            app:srcCompat="@drawable/length_5_route" />

        <ImageView
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/circlebutton" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>